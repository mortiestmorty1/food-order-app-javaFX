<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Label?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.viteats.vitetats1.controller.CustomerController" spacing="10" alignment="CENTER">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Button text="View Menu" onAction="#viewMenu"/>
    <TextField fx:id="feedbackField" promptText="Enter Feedback"/>
    <Button text="Add Feedback" onAction="#addFeedback"/>
    <Label text="Order history and status"/>
    <ListView fx:id="orderListView" prefHeight="150.0" prefWidth="300.0"/>
    <Button text="Logout" onAction="#logout"/>
</VBox>